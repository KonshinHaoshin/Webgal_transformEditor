{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main", "filter-editor"],
  "permissions": [
    "core:default",
    "opener:default",
    "fs:default",
    "fs:read-all",
    "fs:write-all",
    "fs:allow-rename",
    "fs:allow-mkdir",
    "fs:allow-exists",
    "fs:allow-watch",
    "fs:read-dirs",
    "dialog:allow-open",
    "dialog:allow-save",
    "dialog:default",
    "core:window:default",
    "core:window:allow-start-dragging",
    {
      "identifier": "fs:scope",
      "allow": ["**/*"]
    }
  ]
}
